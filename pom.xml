							<!-- <implementation>itext</implementation> -->
							<aggregate>true</aggregate>
							<outputDirectory>${siteDirectory}</outputDirectory>
							<includeReports>true</includeReports>
						</configuration>
						<executions>
							<execution>
								<id>pdf</id>
								<phase>site</phase>
								<goals>
									<goal>pdf</goal>
								</goals>
							</execution>
						</executions>
