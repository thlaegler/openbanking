							<outputInSourceDirectory>true</outputInSourceDirectory>
							<!-- <verbose>true</verbose> -->
						</configuration>
					</plugin>
					<!-- <plugin> <groupId>org.kuali.maven.plugins</groupId> <artifactId>graph-maven-plugin</artifactId> 
